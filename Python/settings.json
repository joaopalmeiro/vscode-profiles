{
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Houston",

  // https://marketplace.visualstudio.com/items?itemName=BeardedBear.beardedicons
  "workbench.iconTheme": "bearded-icons",
  "workbench.tree.indent": 20,

  // https://code.visualstudio.com/docs/python/settings-reference
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.mypyEnabled": true,

  // https://github.com/charliermarsh/ruff-vscode/tree/2023.8.0
  // https://github.com/charliermarsh/ruff-vscode/releases
  "ruff.importStrategy": "fromEnvironment",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": true,
      "source.organizeImports.ruff": true
    },
    "editor.rulers": [88]
  },

  // https://github.com/tamasfe/taplo/blob/release-even-better-toml-0.19.0/editors/vscode/package.json#L161
  // https://taplo.tamasfe.dev/configuration/file.html
  // https://taplo.tamasfe.dev/configuration/formatter-options.html
  "evenBetterToml.taplo.configFile.enabled": false,
  "evenBetterToml.formatter.columnWidth": 88,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  // https://github.com/tamasfe/taplo/issues/100
  // https://github.com/tamasfe/taplo/issues/127
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}
